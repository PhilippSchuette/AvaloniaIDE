<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaIDE.Shell.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaIDE.Shell.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaIDE.Shell">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Menu Background="DimGray" DockPanel.Dock="Top">
            <MenuItem Header="File"></MenuItem>
            <MenuItem Header="Placeholder 1"></MenuItem>
            <MenuItem Header="Placeholder 2"></MenuItem>
        </Menu>

        <ItemsControl DockPanel.Dock="Bottom" Height="24" Background="DimGray"></ItemsControl>

        <!-- This will fill the remaining area of the DockPanel. -->
        <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Text="{Binding DockingPlaceholderMessage}" HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Panel>
    </DockPanel>

</Window>